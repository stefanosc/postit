<%- ajax ||= false -%>
<% if obj.errors.any? %>
  <div <%- if !ajax -%>class="row"<%- end -%> id="error_wrapper">
    <div class="alert alert-error span8">
      <h5>Please correct the following errors:</h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>