<%- ajax ||= false; votable ||= false -%>
<% if obj.errors.any? %>
  <div class="<%- if !ajax -%>row<%- end -%> error_wrapper">
    <div class="alert alert-error span<%= votable ? "9" : "8" %>">
      <%- if !votable -%><h5>Please correct the following errors:</h5><%- end -%>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg +( votable ? " #{votable}" : "")%></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>