<%- ajax ||= false; votable ||= false -%>
<% if obj.errors.any? %>
  <div class="<%- if !ajax -%>row<%- end -%><%= " span11" if votable %>" id="error_wrapper">
    <div class="alert alert-error span8">
      <h5>Please correct the following errors:</h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg +(" #{votable}" if votable)%></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>