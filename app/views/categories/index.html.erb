<%= render 'shared/content_title', title: 'All Categories' %> 

<table class="table table-hover">
  <thead>  
    <tr>  
      <th>Category Name</th>
      <th>Posts in this Category</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.posts.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
