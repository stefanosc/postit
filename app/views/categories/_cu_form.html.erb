 <% if @category.errors.any? %>
   <%= @category.errors.full_messages.each do |msg| %>
     <div class="alert alert-error">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_error" %>
      </div>
  <% end %>
<% end %>

<%= form_for @category do |f| %>
  <%= f.label :name %> 
  <%= f.text_field :name %>
  <br>
  <%= f.submit class:"btn" %>
<% end %>