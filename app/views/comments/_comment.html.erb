  <% show_post ||= false %>
  <div class="row comment">
    <div class="span0 well text-center">
      <%- if logged_in? -%>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: :post do %>
          <i class="icon-arrow-up"></i>
        <%- end -%>
        <br>
      <%- end -%>
      
      <%= comment.votes.size.to_s + ' vote'.pluralize(comment.total_votes) %>
      <br>
      <%- if logged_in? -%>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: :post do %>
          <i class="icon-arrow-down"></i>
        <%- end -%>
      <%- end -%>
    </div>

    <div class="span8 well">
      <p><%= comment.body %></p>
      <p>
        <span class="quiet">posted by:</span> <%= link_to comment.user.username, user_path(comment.user) %> 
        <% if show_post %>
          on <%= link_to comment.post.title, post_path(comment.post) %>
        <% end %>
           <br>
        <small>at <%= comment.created_at %></small>
      </p>
    </div>
  </div>