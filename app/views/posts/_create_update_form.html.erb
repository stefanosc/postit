 <% if @post.errors.any? %>
   <%= @post.errors.full_messages.each do |msg| %>
     <div class="alert alert-error">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_error" %>
      </div>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %> 
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <%= f.submit class:"btn" %>
<% end %>